layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="zellij:tab-bar"
    }
    children
    pane size=2 borderless=true {
      plugin location="zellij:status-bar"
    }
  }
  tab_template name="workspace_tab" {
    pane size=1 borderless=true {
      plugin location="zellij:tab-bar"
    }
    pane split_direction="vertical" {
      pane name="Agents" stacked=true {
        pane                name="Claude" {
					command "claude"
				}
        pane                name="Codex" {
					command "codex"
				}
      }
      pane name="Explorer" stacked=true {
        pane expanded=true name="Yazi" {
          command "zsh"
          args "-lc" "yazi \"$PWD\""
        }
      }
    }
    pane size=2 borderless=true {
      plugin location="zellij:status-bar"
    }
		floating_panes {
      pane name="Shell" {
        command "zsh"
				width "76%"
				height "82%"
				x "12%"
				y "9%"
      }
    }
  }
  tab name="üè†" cwd="$HOME" {
    pane split_direction="vertical" {
      pane name="Claude" command="claude"
      pane name="Shell" command="zsh"
    }
		floating_panes {
			pane name="Htop" {
				floating false 
        command "htop"
				width "76%"
				height "82%"
				x "12%"
				y "9%"
			}
    }
  }
  workspace_tab name="üìÇ" cwd="$HOME/Projects"
  workspace_tab name="<>" cwd="$HOME/Repositories"
  workspace_tab name="ADA" cwd="$HOME/Projects/ADA"
}