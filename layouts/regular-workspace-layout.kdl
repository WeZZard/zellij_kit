// Project Tab Layout - for use with zellij-project command
// This creates a single tab layout that can be opened in existing sessions
layout {
  pane size=1 borderless=true {
    plugin location="zellij:tab-bar"
  }
  pane split_direction="vertical" {
    pane name="Agents" stacked=true {
      pane expanded=true command="claude"
    }
    pane name="Explorer" stacked=true {
      pane name="Yazi" {
        command "zsh"
        args "-lc" "yazi \"$PWD\""
      }
    }
  }
  pane size=2 borderless=true {
    plugin location="zellij:status-bar"
  }
  floating_panes {
    pane {
      command "zsh"
      width "78%"
      height "78%"
      x "11%"
      y "11%"
    }
  }
}